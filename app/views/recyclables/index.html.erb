<h1>Recyclers#index</h1>

<%= button_to "Create New Transaction", new_recyclable_path, :class => "btn btn-primary", :method => :get  %>

<h1>Open Recyclable Transactions</h1>
<% @recyclables.each do |recyclable|  %>
  <div class="redeemable">
    <%= "#{recyclable.created_at.to_formatted_s(:short)}:" %>
    <%= "Plastic: #{recyclable.plastic}" if recyclable.plastic %>
    <%= "Glass: #{recyclable.glass}" if recyclable.glass %>
    <%= "Cans: #{recyclable.cans}" if recyclable.cans %>
    <%= "Mixed Hi5: #{recyclable.other}" if recyclable.other %>
    <%= "Selected: #{recyclable.selected_date.to_formatted_s(:short)}" if recyclable.selected %>
  </div>
<% end  %>

<h1>Open Good Samaritan Transactions</h1>
<% @samaritans.each do |samaritan|  %>
  <div class="samaritan">
    <%= "#{samaritan.created_at.to_formatted_s(:short)}:" %>
    <%= "Cardboard" if samaritan.cardboard %>
    <%= "Newspaper" if samaritan.newspaper %>
    <%= "Magazines" if samaritan.magazines %>
    <%= "Paper" if samaritan.paper %>
    <%= "Non_hi5_plastic" if samaritan.non_hi5_plastic %>
    <%= "Non_hi5_glass" if samaritan.non_hi5_glass %>
    <%= "Non_hi5_cans" if samaritan.non_hi5_cans %>
    <%= "Selected: #{samaritan.selected_date.to_formatted_s(:short)}" if samaritan.selected %>
  </div>
<% end %>
