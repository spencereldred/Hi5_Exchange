<%= form_for @profile do |f| %>
<div>
  <div><%= f.label :first_name %></div>
  <div><%= f.text_field :first_name, placeholder: "< first name >", required: true %></div>

  <div><%= f.label :last_name %></div>
  <div><%= f.text_field :last_name %></div>

  <div><%= f.label :address %></div>
  <div><%= f.text_field :address %></div>

  <div><%= f.label :city %></div>
  <div><%= f.text_field :city %></div>

  <div><%= f.label :state %></div>
  <div><%= f.text_field :state %></div>

  <div><%= f.label :zipcode %></div>
  <div><%= f.text_field :zipcode %></div>

  <div><%= f.label :phone %></div>
  <div><%= f.text_field :phone %></div>

  <div><%= f.label :function %></div>
  <div> <%= f.select :function, options_for_select(%w[recycler redeemer]), :select => "redeemer"  %></div>
  <br>

  <div><%= f.submit message, class: "btn btn-primary" %></div>

</div>
<% end %>